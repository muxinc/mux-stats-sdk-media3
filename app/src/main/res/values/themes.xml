<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuxDataSDKForMedia3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

    </style>
    <style name="TextAppearance.App.PlaybackParamLabel" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    <style name="TextAppearance.App.PlaybackParamEntry" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Gray90</item>
        <item name="android:textColorHint">@color/Gray70</item>
    </style>
</resources>